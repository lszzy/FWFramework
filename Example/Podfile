source 'https://github.com/CocoaPods/Specs.git'
platform :ios, '11.0'
use_frameworks!

target "FWFramework_Example" do
  project 'FWFramework', 'Staging' => :release, 'Testing' => :release
  
  pod 'FWFramework', :path => '../', :subspecs => ['FWFramework', 'FWSwiftUI', 'FWVendor']
  pod 'FWDebug', :configurations => ['Debug', 'Testing']
  
  target 'FWFramework_Tests' do
    inherit! :search_paths
  end
end

post_install do |installer|
  installer.generated_projects.each do |project|
    project.targets.each do |target|
      target.build_configurations.each do |config|
        config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '11.0'
      end
    end
   end
end
